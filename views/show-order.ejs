<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Show Orders</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>
<body>
    <div class="container">
        <h1 class="mt-5">Orders</h1>
        <table class="table">
            <thead>
                <tr>
                    <th>Date</th>
                    <th>Agent</th>
                    <th>Firm Name</th>
                    <th>Quality</th>
                    <th>Quantity</th>
                    <th>Rate</th>
                    <th>Transport</th>
                    <th>Remark</th>
                    <th>PO Number</th>
                </tr>
            </thead>
            <tbody>
                <% data.forEach(order => { %>
                    <tr>
                        <td><%= order.Date.toDateString() %></td>
                        <td><%= order.Agent %></td>
                        <td><%= order.Firm_Name %></td>
                        <td><%= order.Quality %></td>
                        <td><%= order.Quantity %></td>
                        <td><%= order.Rate %></td>
                        <td><%= order.Transport %></td>
                        <td><%= order.Remark %></td>
                        <td><%= order.PO_Number %></td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
        <a href="/" class="btn btn-primary">Back to Home</a>
    </div>
</body>
</html>